---
import Layout from '../layouts/Layout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import PostCard from '../components/PostCard.astro';
import { postsIndex } from '../data/posts';

const base = import.meta.env.BASE_URL;
const allPosts = [...postsIndex].reverse();
---

<Layout
  title="Mister Funable Field Notes â€” Creative playbooks"
  description="Hardware hacks, camera experiments, automation tinkering, and fandom logs from Mister Funable."
  ogImage={allPosts[0]?.heroImage ?? `${base}medium-assets/04/img-01.png`}
>
  <SiteHeader />
  <main>
    <section id="hero" class="border-b border-white/10 py-16 sm:py-20">
      <div class="mx-auto max-w-6xl px-4 lg:px-6">
        <p class="text-sm font-semibold uppercase tracking-[0.5em] text-lime-200/80">
          Mister Funable Field Notes
        </p>
        <h1 class="mt-4 max-w-3xl text-3xl font-semibold leading-tight text-white sm:text-4xl">
          Notes on hardware, automation, and creative rabbit holes.
        </h1>
        <p class="mt-4 max-w-2xl text-lg text-slate-300">
          Quick captures before I forget how I solved a bug, dialed a camera profile, or figured out a new workflow.
        </p>
        <a
          class="mt-6 inline-flex items-center justify-center rounded-full bg-gradient-to-r from-lime-300/90 to-emerald-400 px-6 py-3 text-sm font-semibold text-ink shadow-lg shadow-emerald-500/30"
          href="#posts"
        >
          Browse posts
        </a>
      </div>
    </section>

    <section id="posts" class="mx-auto max-w-6xl space-y-8 px-4 py-16 lg:px-6">
      <div class="flex items-end justify-between">
        <h2 class="text-2xl font-semibold text-white">All Posts <span class="text-base font-normal text-slate-400">({allPosts.length})</span></h2>
      </div>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {allPosts.map((post, index) => (
          <div class={index === 0 ? 'md:col-span-2' : ''}>
            <PostCard post={post} />
          </div>
        ))}
      </div>
    </section>
  </main>
</Layout>
